Subject: [PATCH 08/15] Add warnning if Java < 8

---
 .../src/main/java/org/projectrainbow/launch/Bootstrap.java  | 13 +++++++++++++
 1 file changed, 13 insertions(+)

diff --git a/rainbow/src/main/java/org/projectrainbow/launch/Bootstrap.java b/rainbow/src/main/java/org/projectrainbow/launch/Bootstrap.java
index 0995bf8..287ca50 100644
--- a/rainbow/src/main/java/org/projectrainbow/launch/Bootstrap.java
+++ b/rainbow/src/main/java/org/projectrainbow/launch/Bootstrap.java
@@ -30,6 +30,19 @@ public class Bootstrap {
     public static void main(String[] args) {
         Bootstrap.args = args;
 
+        String jversion = System.getProperty("java.version").split("_")[0].replace("1.", "").replace(".0", "").replace("-ea", "");
+        if (Integer.parseInt(jversion) < 8) {
+            logger.info("*** WARNNING, your Java is outdated         ***");
+            logger.info("*** Java 8 will be required as of 1.12      ***");
+            logger.info("*** Get Java 8: http://bit.ly/Java8Download ***");
+            logger.info("*** Server will start in 5 seconds...       ***");
+            try {
+                Thread.sleep(java.util.concurrent.TimeUnit.SECONDS.toMillis(5));
+            } catch (InterruptedException e) {
+                e.printStackTrace();
+            }
+        }
+
         logger.info("Searching for additional tweakers...");
 
         List<String> tweakClasses = new ArrayList<String>() {{
